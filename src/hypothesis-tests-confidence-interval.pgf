      \draw [decorate, decoration = {brace, amplitude = 5pt}]
        (axis cs: \zValue, 0) -- (axis cs: -\zValue, 0)
        node [mynode, midway, yshift = -1.25em, fill = gray!30]
        {\scriptsize Regi{\~a}o de n{\~a}o rejei{\c c}{\~a}o de $H_0$};
